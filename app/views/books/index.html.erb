<body>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>

    <h2>New book</h2>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>


    <%= form_with model:@book do |f| %>
    <div class="field">
      <label for="book_title">Title</lable><br>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>

      <%= f.submit 'Create Book' %>
    <% end %>

</body>