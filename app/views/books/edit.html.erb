<h1>Editing Book</h1>
<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Update Book' %>
<% end %>

<p class="show">
  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", "/books" %>
</p>